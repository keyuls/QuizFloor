<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quizfloor.quizfloor.showChallenges">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challengesListView"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/skipButton"
        android:layout_marginBottom="3dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skipButton"
        android:src="@drawable/ic_close_black_16dp_2x"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/challengesListView"
        android:layout_alignEnd="@+id/challengesListView"
        android:onClick="skipChallenges"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Challenge For Now"
        android:id="@+id/txtChallengeMessage"
        android:visibility="gone"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignBottom="@+id/skipButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
