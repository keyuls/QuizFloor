<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quizfloor.quizfloor.submitQuestion"
    android:background="#D7CCC8">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Catagory"
        android:id="@+id/CatagorySubmit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question"
        android:id="@+id/QuestionSubmit"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/CatagorySubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Option 1"
        android:id="@+id/Option1Submit"
        android:layout_below="@+id/QuestionSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Option 2"
        android:id="@+id/Option2Submit"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Option 3"
        android:id="@+id/Option3Submit"
        android:layout_below="@+id/Option2Submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Option 4"
        android:id="@+id/Option4Submit"
        android:layout_below="@+id/Option3Submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Answer"
        android:id="@+id/AnswerSubmit"
        android:layout_below="@+id/Option4Submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FF8A65"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Option1SubmitVal"
        android:layout_alignBaseline="@+id/Option1Submit"
        android:layout_alignBottom="@+id/Option1Submit"
        android:layout_toRightOf="@+id/Option1Submit"
        android:layout_toEndOf="@+id/Option1Submit"
        android:imeOptions="actionNext"
        android:singleLine="true"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Option2SubmitVal"
        android:layout_alignBaseline="@+id/Option2Submit"
        android:layout_alignBottom="@+id/Option2Submit"
        android:layout_toRightOf="@+id/Option2Submit"
        android:layout_toEndOf="@+id/Option2Submit"
        android:imeOptions="actionNext"
        android:singleLine="true"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionSubmitVal"
        android:layout_alignBaseline="@+id/QuestionSubmit"
        android:layout_alignBottom="@+id/QuestionSubmit"
        android:layout_toRightOf="@+id/QuestionSubmit"
        android:layout_toEndOf="@+id/QuestionSubmit"
        android:singleLine="true"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Option3SubmitVal"
        android:layout_alignBaseline="@+id/Option3Submit"
        android:layout_alignBottom="@+id/Option3Submit"
        android:layout_toRightOf="@+id/Option3Submit"
        android:layout_toEndOf="@+id/Option3Submit"
        android:imeOptions="actionNext"
        android:singleLine="true"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Option4SubmitVal"
        android:layout_alignBaseline="@+id/Option4Submit"
        android:layout_alignBottom="@+id/Option4Submit"
        android:layout_toRightOf="@+id/Option4Submit"
        android:layout_toEndOf="@+id/Option4Submit"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <Spinner
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/CatagorySubmitVal"
        android:layout_above="@+id/QuestionSubmit"
        android:layout_alignBaseline="@+id/CatagorySubmit"
        android:layout_alignBottom="@+id/CatagorySubmit"
        android:layout_toRightOf="@+id/CatagorySubmit"
        android:layout_toEndOf="@+id/CatagorySubmit"
         />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/AnswerSubmitVal"
        android:layout_above="@+id/QuestionSubmit"
        android:layout_alignBaseline="@+id/AnswerSubmit"
        android:layout_alignBottom="@+id/AnswerSubmit"
        android:layout_toRightOf="@+id/AnswerSubmit"
        android:layout_toEndOf="@+id/AnswerSubmit"

        />

</RelativeLayout>
